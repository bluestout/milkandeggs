.transition-slide .slideshow-slide {
  visibility: hidden;

  &.active {
    visibility: visible;
    z-index: 1;
    @include transform(translateX(0));
  }

  &.next {
    @include transform(translateX(100%));
  }

  &.prev {
    @include transform(translateX(-100%));
  }

  &.next.left,
  &.prev.right,
  &.active.left,
  &.active.right {
    @include transition(transform $slideshowSpeed $ease-out-quad);
  }

  &.next.left,
  &.prev.right {
    @include transform(translateX(0));
    visibility: visible;
    z-index: 10;
  }

  &.active.left {
    @include transform(translateX(-100%));
  }
  &.active.right {
    @include transform(translateX(100%));
