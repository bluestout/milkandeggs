    padding: 9px 0;
    padding-left: 35px;
    line-height: 1.25em;
    text-align: left;

    a {
      color: #000;
    }

    &:hover {
      cursor: pointer;
    }
  }

  .check {
    width: 20px;
    height: 20px;
    border: 1px solid $body-color;
    position: absolute;
    left: 0;
    border-radius: 3px;
    cursor: pointer;
  }
}

.list-radios {

  .check {
    border-radius: 50%;

    &::before {
      content: "";
      display: inline-block;
      position: absolute;
      background-color: $primary-button-background;
      width: 10px;
      height: 10px;
      left: 4px;
      top: 4px;
      border-radius: 50%;
      transition: .2s ease;
      opacity: 0;
      transform: scale(0);
    }
  }

  > li {

    &.checked {
      font-weight: 700;

      .check {

        &::before {
          opacity: 1;
          transform: scale(1);
        }
      }
    }
  }
}


.list-checks {

  .check {

    &::before {
      content: "\e911";
      display: inline-block;
      position: absolute;
      color: $body-color;
      width: 20px;
      height: 20px;
      left: 3px;
      top: -1px;
      transition: .2s ease;
      opacity: 0;
      transform: scale(0);
    }
  }

  > li {

    &.checked {
      font-weight: 700;

      .check {
        transition: .2s all;
        background-color: $primary-button-background;
        border-color: transparent;

        &::before {
          opacity: 1;
          transform: scale(1);
        }
      }
    }
  }
}

.dropdown {
  position: relative;

  .btn-filter {
    color: rgba($body-color, .5);
    display: inline-block;
    padding: 7px 10px;
    position: relative;

    > * {
      pointer-events: none;
    }

    span {
      color: $body-color;
      font-weight: 700;
    }

    &::after {
      content: '\E006';
      margin-left: 10px;
      font-family: 'Pacific';
      font-size: 16px;
      font-weight: 400;
      line-height: 1;
      -webkit-font-smoothing: antialiased;
      font-size: .7em;
    }
  }

  &.open {

    .dropdown-menu {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }
  }
}

.dropdown-menu {
  position: absolute;
  padding: 15px 20px;
  border-radius: 4px;
  box-shadow: 0 4px 18px rgba($body-color, .1);
  width: 250px;
  opacity: 0;
  visibility: hidden;
  transform: translateY(8px);
