  &:after {
    content: '\E007';
    position: absolute;
    right: 15px;
    top: 50%;
    margin-top: -7px;
    @include icon-font();
  }

  select {
    @extend %cover;
    color: black;
    cursor: pointer;
    z-index: 2;
    width: 100%; /* needed for Firefox */
