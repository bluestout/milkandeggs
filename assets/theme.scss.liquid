  .has-dropdown {

    &:hover {
      > a {
        position: relative;
      }

      > ul {
        display: block;
      }
    }
  }

  /* Inside any dropdown */
  .regular-nav ul {
    display: none;
    position: absolute;
    background: $body-background-color;
    /* border-bottom: 1px solid $border-color; */
    width: 200px;
    text-align: left;
