      margin-top: 0;
    }

    > *:last-child {
      margin-bottom: 0;
    }

    &.active { display: block; }
  }
}

.modal-wrapper {
  display: none;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba($body-background-color, 0.7);
  z-index: 9999;
  @include opacity(0);

  @include transition(opacity 0.3s $ease-out-quad);

  &.active,
  &.opening {
    display: block;
  }

  &.opening,
  &.open {
    opacity: 1 !important;
    filter: alpha(opacity=100) !important;
  }

  .modal-overflow & {
    overflow-y: scroll;
    -webkit-overflow-scrolling: touch;
  }

  @include breakpoint(s) {
    padding-bottom: 30px;
  }

  .modal-content {
    position: absolute;
    top: 55% !important;
    left: 50% !important;
    width: 60% !important;
    max-width: 640px;
    padding: 30px;
    background: $body-background-color;
    border: 1px solid $border-color;
    opacity: 0 !important;
    filter: alpha(opacity=0) !important;

    @include breakpoint(l) {
      width: 70%;
    }

    @include breakpoint(m) {
      width: 80%;
    }

    @include breakpoint(s) {
      position: relative;
      margin: 0 0 30px !important;
      top: 15px !important;
      left: 15px !important;
      width: -webkit-calc(100% - 30px);
      width: calc(100% - 30px);
      padding: 70px 15px 15px;

      @include lt-ie9 {
        width: 100%;
      }
    }

    @include transition(opacity 0.3s $ease-out-quad, top 0.3s $ease-out-quad);

    .open & {
      top: 50% !important;
      opacity: 1 !important;
      filter: alpha(opacity=100) !important;
    }

    .modal-overflow & {
      top: 30px!important;
      margin-bottom: 30px;
    }
  }
}

