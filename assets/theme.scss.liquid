        &:before {
          content: "";
          position: absolute;
          top: 4px;
          left: 5px;
          display: table;
          width: 3px;
          height: 7px;
          border: 2px solid #333;
          border-top-width: 0;
          border-left-width: 0;
          -webkit-transform: rotate(45deg);
          -ms-transform: rotate(45deg);
          -o-transform: rotate(45deg);
          transform: rotate(45deg);
        }
      }
    }
  }
}

