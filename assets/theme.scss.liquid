/* Tables */

table {
  background: transparent;
  color: $body-color;
  border: 1px solid $border-color;
  border-top: none;
  border-radius: 5px;
  border-collapse: separate;
  font-size: 14px;
  line-height: 22px;

  &.clean {
    border: none;
    border-radius: 0;
  }

