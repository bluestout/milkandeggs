  }

  th:last-child {
    border-radius: 0 5px 0 0;
  }
}

tbody tr:first-child {

  td:first-child,
  th:first-child {
    border-radius: 5px 0 0 0;
  }

  td:last-child,
  th:last-child {
    border-radius: 0 5px 0 0;
  }

  thead + & {
    td:first-child,
    th:first-child,
    td:last-child,
    th:last-child {
      border-radius: 0;
    }
  }
}

tbody tr:last-child {

  td:first-child,
  th:first-child {
    border-radius: 0 0 0 5px;
  }

  td:last-child,
  th:last-child {
    border-radius: 0 0 5px 0;
  }
