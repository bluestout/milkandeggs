    padding-bottom: 50px;
  }
}

.rte .tabs {
  display: block;
  width: 100%;
  height: 42px;
  padding: 0;
  margin: 30px 0 0 30px;
  white-space: nowrap;
  position: relative;
  z-index: 10;

  li {
    display: inline-block;
    height: 41px;
    font-size: 14px;
    line-height: 42px;
    padding: 0 16px;
    margin: 0;
    border: 1px solid transparent;
    border-bottom: none;
    cursor: pointer;
    color: $heading-color;

    &.active {
      border-color: $border-color;
      height: 42px;
      border-radius: 5px 5px 0 0;
      background: $body-background-color;
    }
  }
}

.rte .tabs-content {
  display: block;
  width: 100%;
  position: relative;
  top: -1px;
  z-index: 5;
  padding: 30px;
  margin: 0 0 30px;
  overflow: hidden;
  border: 1px solid $border-color;
  border-radius: 5px;

  > li {
    display: none;
    margin: 0;

    > *:first-child {
      margin-top: 0;
    }

    > *:last-child {
      margin-bottom: 0;
    }

    &.active { display: block; }
  }
}

.modal-wrapper {
  display: none;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba($body-background-color, 0.7);
  z-index: 9999;
  @include opacity(0);

  @include transition(opacity 0.3s $ease-out-quad);

  &.active,
  &.opening {
    display: block;
  }

  &.opening,
  &.open {
    @include opacity(1);
  }

  .modal-overflow & {
    overflow-y: scroll;
    -webkit-overflow-scrolling: touch;
  }

  @include breakpoint(s) {
    padding-bottom: 30px;
  }
}

.modal-content {
  position: absolute;
  top: 55%;
  left: 50%;
  width: 60%;
  max-width: 640px;
  padding: 30px;
  background: $body-background-color;
  border: 1px solid $border-color;
  opacity: 0 !important;
  filter: alpha(opacity=0) !important;

  @include breakpoint(l) {
    width: 70%;
  }

  @include breakpoint(m) {
    width: 80%;
  }

  @include breakpoint(s) {
    position: relative;
    margin: 0 0 30px !important;
    top: 15px !important;
    left: 15px !important;
    width: -webkit-calc(100% - 30px);
    width: calc(100% - 30px);
    padding: 70px 15px 15px;

    @include lt-ie9 {
      width: 100%;
    }
  }

  @include transition(opacity 0.3s $ease-out-quad, top 0.3s $ease-out-quad);

  .open & {
    top: 50% !important;
    opacity: 1 !important;
    filter: alpha(opacity=100) !important;
  }

  .modal-overflow & {
    top: 30px!important;
    margin-bottom: 30px;
  }
}

.modal-close-secondary {
  @extend .meta;
  position: absolute;
  top: 30px;
  right: 30px;
  line-height: 1;
  cursor: pointer;
  color: $meta-color-secondary;

  &:hover {
    color: $meta-color;
  }

  &:after {
    content: '\E010';
    top: 3px;
    position: relative;
    margin-left: 5px;
    @include icon-font(25px, 0);
  }

  @include breakpoint(s) {
    right: 50%;
    margin-right: -35px;
  }
}

