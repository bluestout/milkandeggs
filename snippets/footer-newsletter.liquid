{% if settings.newsletter-action-url != blank %}
<div class="newsletter-subscription">
    {% if settings.footer-titles %}
    <h4>{{ 'layout.footer.newsletter_title' | t }}</h4>
    {% endif %}

    <form action="{{ settings.newsletter-action-url }}" method="post" name="{% if settings.newsletter-platform == 'mailchimp' %}mc-embedded-subscribe-form{% endif %}" target="_blank">

    {% if settings.newsletter-platform == 'mailchimp' %}
        <input class="newsletter-email" name="EMAIL" type="email" placeholder="{{ 'general.general.email_placeholder' | t }}">
    {% endif %}

    {% if settings.newsletter-platform == 'campaign-monitor' %}
        <input class="newsletter-email" name="{{ settings.campaign-monitor-name }}" type="email" placeholder="{{ 'general.general.email_placeholder' | t }}">
    {% endif %}

    <input class="newsletter-submit" type="submit" value="&#57424;">

    </form>
</div>
{% endif %}


<form id="email_signup" class="klaviyo_styling klaviyo_standard_embed_E9LVFV" action="//manage.kmail-lists.com/subscriptions/subscribe" data-ajax-submit="//manage.kmail-lists.com/ajax/subscriptions/subscribe" method="GET" target="_blank" novalidate="novalidate">
  <input type="hidden" name="g" value="E9LVFV">
  <div class="klaviyo_field_group">
    <label for="k_id_email">Join our newsletter</label>
    <input type="email" value="" name="email" id="k_id_email" placeholder="Your email" />
  </div>
  <div class="klaviyo_messages">
    <div class="success_message" style="display:none;"></div>
    <div class="error_message" style="display:none;"></div>
    </div>
  <div class="klaviyo_form_actions">
    <button type="submit" class="klaviyo_submit_button">Sign up</button>
  </div>
</form>
<style type="text/css">
.klaviyo_styling.klaviyo_standard_embed_E9LVFV,
.klaviyo_condensed_styling.klaviyo_standard_embed_E9LVFV {
  font-family: Georgia;
}.klaviyo_styling.klaviyo_standard_embed_E9LVFV label,
.klaviyo_condensed_styling.klaviyo_standard_embed_E9LVFV label {
  color:#222;
}.klaviyo_styling.klaviyo_standard_embed_E9LVFV input[type=text],
.klaviyo_styling.klaviyo_standard_embed_E9LVFV input[type=email],
.klaviyo_condensed_styling.klaviyo_standard_embed_E9LVFV input[type=text],
.klaviyo_condensed_styling.klaviyo_standard_embed_E9LVFV input[type=email] {
  border-radius: 2px;
}.klaviyo_styling.klaviyo_standard_embed_E9LVFV .klaviyo_submit_button,
.klaviyo_condensed_styling.klaviyo_standard_embed_E9LVFV .klaviyo_submit_button {
  background-color:#FAD405;
  border-radius: 2px;
}.klaviyo_styling.klaviyo_standard_embed_E9LVFV .klaviyo_submit_button:hover,
.klaviyo_condensed_styling.klaviyo_standard_embed_E9LVFV .klaviyo_submit_button:hover {
  background-color:#FAD405;
}
</style>
<script type="text/javascript" src="//www.klaviyo.com/media/js/public/klaviyo_subscribe.js"></script>
<script type="text/javascript">
  KlaviyoSubscribe.attachToForms('#email_signup', {
    hide_form_on_success: true
  });
</script>